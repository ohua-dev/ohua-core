{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "stack",
            "args": [
                "build"
            ],
            "type": "shell",
            "group": "build",
            "problemMatcher": [
                {
                    "owner": "haskell",
                    "fileLocation": "absolute",
                    "pattern": {
                        // parse errors
                        "regexp": "(.+?):(\\d+):(\\d+):\\s+(.+)",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "message": 4
                    }
                },
                {
                    "owner": "haskell",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            // parse errors
                            "regexp": "(.+?):(\\d+):(\\d+):(?:\\s(Warning):)?\\s*$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4
                        },
                        {
                            "regexp": "^\\s+(.+)",
                            "message": 1
                        }
                    ]
                }
            ]
        }
    ]
}
